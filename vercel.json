{
  "version": 2,
  "buildCommand": "VITE_API_URL=https://imarisha-loans.onrender.com/api VITE_APP_ENV=production npm run build",
  "env": {
    "VITE_API_URL": "https://imarisha-loans.onrender.com/api",
    "VITE_APP_ENV": "production",
    "NODE_ENV": "production"
  },
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}